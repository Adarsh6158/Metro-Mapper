<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient background -->
    <gradient
        android:startColor="#FF4CAF50"
        android:endColor="#FF388E3C"
        android:angle="45" />

    <!-- Stroke -->
    <stroke
        android:width="1dp"
        android:color="#FF156D26" />

    <!-- Padding -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />

    <!-- Rounded corners -->
    <corners
        android:radius="15dp" />

</shape>
